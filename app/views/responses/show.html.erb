<div class="row">
  <div class="col-md-8">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3>
          <%= @response.display_name %>
        </h3>
      </div>
      <div class="panel-body">
        Completed
        <%= @response.question_responses_count %>
        of
        <%= Question.count %>
        questions
       <% @p = 0 %>
       <% @e = 0 %>
       <% @c = 0 %>
        <% @response.question_responses.each do |question_response| %>
          <% question_response.question.question_choices.each do |question_choice| %>
            <% if question_choice.creative_quality.name.include? "Purpose" %> 
              <% @p += question_choice.score %>
            <% end %>
            <% if question_choice.creative_quality.name.include? "Empowerment" %> 
              <% @e += question_choice.score %>
            <% end %>
            <% if question_choice.creative_quality.name.include? "Collaboration" %> 
              <% @c += question_choice.score %>
            <% end %>
          <% end %>
        <% end %>


        <hr>
        <strong> Purpose </strong>
        <ul>
          <li>Raw score: <%= @p %></li>
          <li>Max score:</li>
        </ul>
        <strong> Empowerment </strong>
        <ul>
          <li>Raw score: <%= @e %></li>
          <li>Max score:</li>
        </ul>
        <strong> Collaboration </strong>
        <ul>
          <li>Raw score: <%= @c %></li>
          <li>Max score:</li>
        </ul>
      </div>
    </div>

    <hr>

    <% @response.question_responses.each do |question_response| %>
      <%= render 'questions/header', question: question_response.question %>

      <table class="table table-bordered">
        <% question_response.question.question_choices.each do |question_choice| %>
          <tr>
            <td>
              <% if question_choice == question_response.question_choice %>
                  <% if question_choice.score >= 0 %>
                    <strong>
                      <%= question_choice.text %>
                    </strong>
                    <p class="color_green">
                      <%= question_choice.creative_quality.name %> <%= question_choice.score %> 
                    </p>    
                    <% else %>
                    <strong>
                      <%= question_choice.text %>
                    </strong>
                      <p class="color_red">
                        <%= question_choice.creative_quality.name %> <%= question_choice.score %> 
                      </p>       
                  <% end %>
              <% else %>
                <span class="text-muted" class="color_red">
                  <%= question_choice.text %>
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
